@model AuthenticationandAuthorization.Models.DB;
@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var Wrongcredientials = TempData["Wrongcredientials"] as string;
}
<h1>Login Page</h1>
@if(!string.IsNullOrEmpty(Wrongcredientials))
{
    <h3 class= "Danger" style="padding:15px;">@Wrongcredientials</h3>
}
<form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
    <div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <form class="form-horizontal" asp-action="Index">
                <div class="form-group">
                   <label class="control-label"></label>
                    <input asp-for="Username"  class="form-control"type="text" />
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
                <div class="form-group">
                   <input type="submit" value="Submit" />
                </div>
            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
@{
    if (TempData["msg"]!=null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }
}

</form>